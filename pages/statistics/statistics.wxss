/* pages/statistics/statistics.wxss */

.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;

  margin: 0rpx;
} 
.cavans-bar{
  min-height: 500rpx;
  width: 100%;
}

ec-canvas {
  width: 100%;
  height: 500px;
}

.cavans-view{
  min-height: 500rpx;
  width: 100%;
  top: -100;
  left: 0;
  right: 0;
  position: relative;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;

}