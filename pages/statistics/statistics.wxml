<view class="container">
  <ec-canvas wx:if="{{!isDisposed}}" id="mychart-dom-calendar" canvas-id="mychart-calendar" ec="{{ calendar }}"></ec-canvas>
</view>


<view class="page">
    <view class="page__bd">
        <view class="weui-panel">
            <view class="weui-panel__hd">编程语言比例</view>
            <view class="weui-panel__bd">
                <view class="weui-media-box weui-media-box_text">
                    <view class="weui-media-box__desc cavans-view">      
                    <ec-canvas wx:if="{{!isDisposed}}" id="mychart-dom-bar" canvas-id="mychart-bar" ec="{{ ec }}" class='cavans-bar'></ec-canvas>
                    </view>
                    <view class="weui-media-box__info">
                        <view class="weui-media-box__info__meta">统计时间</view>
                        <view class="weui-media-box__info__meta">{{updated}}</view>
                        <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">数据仅供参考</view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>